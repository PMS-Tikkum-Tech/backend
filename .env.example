# Environment Configuration
RAILS_ENV=development
RACK_ENV=development

# Database Configuration
DATABASE_URL=postgresql://postgres:password@localhost:5432/pms_tikkum_tech_development

# Redis Configuration
REDIS_URL=redis://localhost:6379/0

# Rails Secret Key Base
SECRET_KEY_BASE=your_secret_key_base_here

# Devise Configuration
DEVISE_SECRET_KEY=your_devise_secret_key_here
DEVISE_JWT_SECRET_KEY=your_jwt_secret_key_here

# AWS S3 Configuration (for Active Storage)
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_REGION=us-east-1
AWS_BUCKET_NAME=your_bucket_name

# Sidekiq Configuration
SIDEKQ_CONCURRENCY=5

# Application Configuration
APP_HOST=localhost:3000
APP_NAME=PMS Tikkum Tech
APP_EMAIL=noreply@pms-tikkum-tech.com

# CORS Configuration (if needed)
CORS_ORIGINS=http://localhost:3000,http://localhost:3001

# Monitoring (Optional)
LOGRAGE_ENABLED=true

# Development specific
BOOTSNAP_CACHE_SIZE=$(( 1024 * 1024 * 20 ))