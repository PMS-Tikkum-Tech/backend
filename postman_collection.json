{
  "info": {
    "name": "Rukita Clone - Auth Module API",
    "description": "Authentication and User Management API for Rukita Clone Property Management System",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "variable": [
    {
      "key": "base_url",
      "value": "http://localhost:3000",
      "type": "string"
    },
    {
      "key": "jwt_token",
      "value": "",
      "type": "string",
      "disabled": true
    },
    {
      "key": "admin_jwt_token",
      "value": "",
      "type": "string",
      "disabled": true
    },
    {
      "key": "refresh_token",
      "value": "",
      "type": "string",
      "disabled": true
    }
  ],
  "item": [
    {
      "name": "1. Authentication",
      "item": [
        {
          "name": "1.1 Login - Admin",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "if (pm.response.code === 200) {",
                  "    const response = pm.response.json();",
                  "    if (response.success && response.data) {",
                  "        pm.environment.set('jwt_token', response.data.token);",
                  "        pm.environment.set('admin_jwt_token', response.data.token);",
                  "        pm.environment.set('refresh_token', response.data.refresh_token);",
                  "        console.log('Login successful! Token saved.');",
                  "    }",
                  "}"
                ],
                "type": "text/javascript"
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"email\": \"admin@rukita-clone.com\",\n  \"password\": \"Admin@123456\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/api/v1/auth/login",
              "host": ["{{base_url}}"],
              "path": ["api", "v1", "auth", "login"]
            },
            "description": "Login sebagai Admin untuk mendapatkan JWT token"
          }
        },
        {
          "name": "1.2 Login - Owner",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "if (pm.response.code === 200) {",
                  "    const response = pm.response.json();",
                  "    if (response.success && response.data) {",
                  "        pm.environment.set('jwt_token', response.data.token);",
                  "        pm.environment.set('refresh_token', response.data.refresh_token);",
                  "        console.log('Owner login successful! Token saved.');",
                  "    }",
                  "}"
                ],
                "type": "text/javascript"
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"email\": \"owner@example.com\",\n  \"password\": \"Owner12345\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/api/v1/auth/login",
              "host": ["{{base_url}}"],
              "path": ["api", "v1", "auth", "login"]
            },
            "description": "Login sebagai Owner untuk mendapatkan JWT token"
          }
        },
        {
          "name": "1.3 Get Me - Current User",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{jwt_token}}"
              }
            ],
            "url": {
              "raw": "{{base_url}}/api/v1/auth/me",
              "host": ["{{base_url}}"],
              "path": ["api", "v1", "auth", "me"]
            },
            "description": "Mendapatkan profile user yang sedang login"
          }
        },
        {
          "name": "1.4 Logout",
          "request": {
            "method": "DELETE",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{jwt_token}}"
              },
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"refresh_token\": \"{{refresh_token}}\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/api/v1/auth/logout",
              "host": ["{{base_url}}"],
              "path": ["api", "v1", "auth", "logout"]
            },
            "description": "Logout dan revoke refresh token"
          }
        }
      ]
    },
    {
      "name": "2. User Management (Admin Only)",
      "item": [
        {
          "name": "2.1 List Users - Paginated",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{admin_jwt_token}}"
              }
            ],
            "url": {
              "raw": "{{base_url}}/api/v1/users?page=1&per_page=10",
              "host": ["{{base_url}}"],
              "path": ["api", "v1", "users"],
              "query": [
                {
                  "key": "page",
                  "value": "1"
                },
                {
                  "key": "per_page",
                  "value": "10"
                }
              ]
            },
            "description": "List semua users dengan pagination (Admin only)"
          }
        },
        {
          "name": "2.2 List Users - Filter by Role",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{admin_jwt_token}}"
              }
            ],
            "url": {
              "raw": "{{base_url}}/api/v1/users?role=owner&active=true",
              "host": ["{{base_url}}"],
              "path": ["api", "v1", "users"],
              "query": [
                {
                  "key": "role",
                  "value": "owner"
                },
                {
                  "key": "active",
                  "value": "true"
                }
              ]
            },
            "description": "Filter users berdasarkan role dan active status (Admin only)"
          }
        },
        {
          "name": "2.3 Get User Detail",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{admin_jwt_token}}"
              }
            ],
            "url": {
              "raw": "{{base_url}}/api/v1/users/:id",
              "host": ["{{base_url}}"],
              "path": ["api", "v1", "users", ":id"],
              "variable": [
                {
                  "key": "id",
                  "value": "1",
                  "description": "User ID"
                }
              ]
            },
            "description": "Get detail user berdasarkan ID (Admin or self)"
          }
        },
        {
          "name": "2.4 Create User - Owner (No Photo)",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{admin_jwt_token}}"
              },
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"user\": {\n    \"email\": \"john.doe@example.com\",\n    \"password\": \"John12345\",\n    \"first_name\": \"John\",\n    \"last_name\": \"Doe\",\n    \"phone\": \"+628123456789\",\n    \"role\": \"owner\"\n  }\n}"
            },
            "url": {
              "raw": "{{base_url}}/api/v1/users",
              "host": ["{{base_url}}"],
              "path": ["api", "v1", "users"]
            },
            "description": "Create user baru tanpa profile photo (Admin only)"
          }
        },
        {
          "name": "2.5 Create User - Owner (With Photo)",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{admin_jwt_token}}"
              }
            ],
            "body": {
              "mode": "formdata",
              "formdata": [
                {
                  "key": "user[email]",
                  "value": "jane.smith@example.com",
                  "type": "text"
                },
                {
                  "key": "user[password]",
                  "value": "Jane12345",
                  "type": "text"
                },
                {
                  "key": "user[first_name]",
                  "value": "Jane",
                  "type": "text"
                },
                {
                  "key": "user[last_name]",
                  "value": "Smith",
                  "type": "text"
                },
                {
                  "key": "user[phone]",
                  "value": "+628987654321",
                  "type": "text"
                },
                {
                  "key": "user[role]",
                  "value": "owner",
                  "type": "text"
                },
                {
                  "key": "user[profile_photo]",
                  "type": "file",
                  "src": []
                }
              ]
            },
            "url": {
              "raw": "{{base_url}}/api/v1/users",
              "host": ["{{base_url}}"],
              "path": ["api", "v1", "users"]
            },
            "description": "Create user baru dengan profile photo (Admin only)"
          }
        },
        {
          "name": "2.6 Update User - Basic Info",
          "request": {
            "method": "PUT",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{admin_jwt_token}}"
              },
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"user\": {\n    \"first_name\": \"John Updated\",\n    \"last_name\": \"Doe Updated\",\n    \"phone\": \"+628999999999\"\n  }\n}"
            },
            "url": {
              "raw": "{{base_url}}/api/v1/users/:id",
              "host": ["{{base_url}}"],
              "path": ["api", "v1", "users", ":id"],
              "variable": [
                {
                  "key": "id",
                  "value": "2",
                  "description": "User ID to update"
                }
              ]
            },
            "description": "Update user data tanpa photo (Admin or self)"
          }
        },
        {
          "name": "2.7 Update User - Upload Photo",
          "request": {
            "method": "PUT",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{admin_jwt_token}}"
              }
            ],
            "body": {
              "mode": "formdata",
              "formdata": [
                {
                  "key": "user[first_name]",
                  "value": "John With Photo",
                  "type": "text"
                },
                {
                  "key": "user[profile_photo]",
                  "type": "file",
                  "src": []
                }
              ]
            },
            "url": {
              "raw": "{{base_url}}/api/v1/users/:id",
              "host": ["{{base_url}}"],
              "path": ["api", "v1", "users", ":id"],
              "variable": [
                {
                  "key": "id",
                  "value": "2",
                  "description": "User ID to update"
                }
              ]
            },
            "description": "Upload/update profile photo (Admin or self)"
          }
        },
        {
          "name": "2.8 Update User - Remove Photo",
          "request": {
            "method": "PUT",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{admin_jwt_token}}"
              },
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"user\": {\n    \"first_name\": \"John No Photo\",\n    \"remove_profile_photo\": true\n  }\n}"
            },
            "url": {
              "raw": "{{base_url}}/api/v1/users/:id",
              "host": ["{{base_url}}"],
              "path": ["api", "v1", "users", ":id"],
              "variable": [
                {
                  "key": "id",
                  "value": "2",
                  "description": "User ID to update"
                }
              ]
            },
            "description": "Hapus profile photo user (Admin or self)"
          }
        },
        {
          "name": "2.9 Delete User (Soft Delete)",
          "request": {
            "method": "DELETE",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{admin_jwt_token}}"
              }
            ],
            "url": {
              "raw": "{{base_url}}/api/v1/users/:id",
              "host": ["{{base_url}}"],
              "path": ["api", "v1", "users", ":id"],
              "variable": [
                {
                  "key": "id",
                  "value": "2",
                  "description": "User ID to delete (soft delete)"
                }
              ]
            },
            "description": "Soft delete user (set active: false) - Admin only"
          }
        }
      ]
    },
    {
      "name": "3. Owner Actions (Self Only)",
      "item": [
        {
          "name": "3.1 Get Own Profile",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{jwt_token}}"
              }
            ],
            "url": {
              "raw": "{{base_url}}/api/v1/auth/me",
              "host": ["{{base_url}}"],
              "path": ["api", "v1", "auth", "me"]
            },
            "description": "Owner melihat profile sendiri"
          }
        },
        {
          "name": "3.2 Update Own Profile",
          "request": {
            "method": "PUT",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{jwt_token}}"
              },
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"user\": {\n    \"first_name\": \"Owner Updated\",\n    \"last_name\": \"Surname\",\n    \"phone\": \"+628111111111\"\n  }\n}"
            },
            "url": {
              "raw": "{{base_url}}/api/v1/users/:id",
              "host": ["{{base_url}}"],
              "path": ["api", "v1", "users", ":id"],
              "variable": [
                {
                  "key": "id",
                  "value": "{{owner_user_id}}",
                  "description": "Owner user ID"
                }
              ]
            },
            "description": "Owner update profile sendiri"
          }
        },
        {
          "name": "3.3 Upload Own Profile Photo",
          "request": {
            "method": "PUT",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{jwt_token}}"
              }
            ],
            "body": {
              "mode": "formdata",
              "formdata": [
                {
                  "key": "user[first_name]",
                  "value": "Owner With Photo",
                  "type": "text"
                },
                {
                  "key": "user[profile_photo]",
                  "type": "file",
                  "src": []
                }
              ]
            },
            "url": {
              "raw": "{{base_url}}/api/v1/users/:id",
              "host": ["{{base_url}}"],
              "path": ["api", "v1", "users", ":id"],
              "variable": [
                {
                  "key": "id",
                  "value": "{{owner_user_id}}",
                  "description": "Owner user ID"
                }
              ]
            },
            "description": "Owner upload profile photo sendiri"
          }
        }
      ]
    }
  ]
}
